<body>
    <form action="/task/add" method="POST">
        <input placeholder="task-name" name="name" required>
        <input type="text" placeholder="description" name="description" required>
        <input type="number" placeholder="maximum-points" name="maximum_points" min="1" max="500" required>
        <input type="datetime-local" placeholder="deadline" name="deadline" required>
        <button>Submit</button>
    </form>
</body>

